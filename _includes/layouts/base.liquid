<!-- _includes/base.liquid -->

<!-- Variables -->
{% capture footer_content %}
  {% include 'partials/footer.liquid' %}
{% endcapture %}
<!-- HTML -->
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>{{ title | escape }}</title>
    <meta name="description" content="{{ description |  escape }}">
    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://edasnerfamilycenter.org/">
    <meta property="og:type" content="website">
    <meta property="og:title" content="The Ed Asner Family Center">
    <meta property="og:description" content="{{ description |  escape }}">
    <meta property="og:image" content="https://remarkable-lebkuchen-713998.netlify.app/assets/img/logo.svg">

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image">
    <meta property="twitter:domain" content="edasnerfamilycenter.org/">
    <meta property="twitter:url" content="https://edasnerfamilycenter.org/">
    <meta name="twitter:title" content="The Ed Asner Family Center">
    <meta name="twitter:description" content="">
    <meta name="twitter:image" content="https://remarkable-lebkuchen-713998.netlify.app/assets/img/logo.svg">
    <!-- Favicon -->
    <link
      rel="icon"
      type="image/x-icon"
      href="/assets/img/logo.svg"
    >
  </head>

  <body>
    {% include 'partials/banner.liquid' %}
    {% include 'partials/header.liquid' %}
    {% include 'partials/breadcrumbs.liquid' %}
    <main>
      {{ content }}
    </main>
    <footer>
      {% include 'partials/footer.liquid' %}
    </footer>
    <script src="/js/bundle.js" defer></script>
  </body>
</html>
