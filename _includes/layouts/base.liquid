<!-- _includes/base.liquid -->

<!-- Variables -->
{% capture footer_content %}
  {% include 'partials/footer.liquid' %}
{% endcapture %}
<!-- HTML -->
<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <title>{{ title }}</title>
    <meta name="description" content={{ description }}>
    <link
      rel="icon"
      type="image/x-icon"
      href="/assets/img/logo.svg">
  </head>
  <body>
    {% include 'partials/banner.liquid' %}
    {% include 'partials/header.liquid' %}
    {% include 'partials/breadcrumbs.liquid' %}
    <!-- INDEX PAGE HERO -->
    {% if page.url == '/' or page.url == '/index.html' %}
      <div class="w-full bg-gradient-to-b from-teafc-light-blue to-white">
        {% include 'partials/hero.liquid' 
          , hero_heading: hero_heading
          , hero_subheading: hero_subheading
          , hero_btn: hero_btn
          , display_button: display_button
          , swap_col: swap_col
        %}
      </div>
    {% endif %}
    <!-- ABOUT US HERO -->
    {% if page.url == '/about-us/' or page.url == '/about-us.html/' %}
      <div class="w-full bg-white">
        <div class="mx-auto max-w-7xl lg:px-12 lg:py-8 bg-teafc-blue">
          {% include 'partials/hero.liquid' 
            , hero_heading: hero_heading
            , hero_subheading: hero_subheading
            , hero_btn: hero_btn
            , display_button: display_button
            , swap_col: swap_col
          %}
        </div>
      </div>
    {% endif %}
    <!-- ALL OTHER CONTENT -->
    <div class="mx-auto max-w-7xl sm:px-6 lg:px-8">
      <main>
        {{ content }}
      </main>
      <footer>
        {% include 'partials/branded-container.liquid'
          , content: footer_content %}
      </footer>
    </div>
    <script src="/js/bundle.js" defer></script>
  </body>
</html>