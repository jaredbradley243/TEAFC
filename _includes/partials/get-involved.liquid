<div class="container-sm flex flex-col items-center bg-white py-8 sm:pb-12 sm:pt-4">
  <div class="mx-auto max-w-2xl text-center">
    <h2 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-5xl">
      {{ get-involved.section_title | upcase }}
    </h2>
    <p class="mt-6 text-base font-medium leading-8 text-gray-900">
      {{ get-involved.section_desc }}
    </p>
  </div>
  <div class="mx-auto mt-16 flex flex-row gap-6 sm:mt-8 lg:mx-0 lg:max-w-none lg:gap-12">
