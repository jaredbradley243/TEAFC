<div class="container-sm flex flex-col items-center bg-white">
  <div class="max-w-2xl text-center">
    <h2 class="text-3xl font-bold tracking-tight text-gray-700 sm:text-4xl lg:text-4xl">
      {{ get-involved.section_title | upcase }}
    </h2>
    <p class="mt-6 text-base text-gray-500 lg:text-lg">
      {{ get-involved.section_desc }}
    </p>
  </div>
  <div class="mt-14 flex flex-col gap-12 sm:flex-row lg:max-w-none">
    <div class="flex flex-1 flex-col gap-4 rounded-xl bg-white/5">
      <div class="flex justify-center overflow-hidden rounded-lg">
        <img
          class="aspect-[2/1] max-h-64 w-full object-cover object-top"
          src="{{ get-involved.card_1_img }}"
          alt=""
          {% imageDimensions get-involved.card_1_img %}
        >
      </div>
      <div class="flex flex-grow flex-col gap-2 text-base leading-6">
        <h3 class="font-semibold text-gray-700">{{ get-involved.card_1_title | upcase }}</h3>
        <div class="w-1/1 h-0.5 bg-gray-300 "></div>
        <p class="text-gray-500">{{ get-involved.card_1_desc }}</p>
      </div>
      <div class="flex pt-4 sm:self-center">
        <a
          href="{{ navigation.contact_url }}"
          class="rounded-lg border-teafc-orange bg-teafc-orange px-12 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-teafc-orange focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teafc-orange"
        >
          {{ get-involved.card_1_btn_txt }}
        </a>
      </div>
    </div>
    <div class="flex flex-1 flex-col gap-4 rounded-xl bg-white/5">
      <div class="flex justify-center overflow-hidden rounded-lg">
        <img
          class="aspect-[2/1] max-h-64 w-full object-cover object-center"
          src="{{ get-involved.card_2_img }}"
          alt=""
          {% imageDimensions get-involved.card_2_img %}
        >
      </div>
      <div class="flex flex-grow flex-col gap-2 text-base leading-6">
        <h3 class="font-semibold text-gray-700">{{ get-involved.card_2_title | upcase }}</h3>
        <div class="w-1/1 h-0.5 bg-gray-300 "></div>
        <p class="text-gray-500">{{ get-involved.card_2_desc }}</p>
      </div>
      <div class="flex pt-4 sm:self-center">
        <a
          href="{{ navigation.donate_url }}"
          target="_blank"
          class="rounded-lg border-teafc-orange bg-teafc-orange px-12 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-teafc-orange focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teafc-orange"
        >
          {{ get-involved.card_2_btn_txt }}
        </a>
      </div>
    </div>
  </div>
</div>
