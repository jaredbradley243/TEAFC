<!-- _includes/partials/info-cards-container.liquid -->
{% comment %}
  {% assign info_card_count = info_cards | size %}
  {% assign info_card_mod = info_card_count | modulo: 2 %}

  {% if info_card_count <= 4 %}
    {% assign grid_col_num = info_card_count %}
    {% if info_card_mod == 1 %}
      {% assign md_grid_col = 1 %}
    {% elsif info_card_mod == 0 %}
      {% assign md_grid_col = 2 %}
    {% endif %}
  {% elsif info_card_mod == 0 %}
    {% if info_card_count/ %}

    {% endif %}
    {% assign grid_col_num = 4 %}
    {% assign md_grid_col = 2 %}
  {% elsif info_card_mod != 0 %}
    {% assign grid_col_num = 3 %}
    {% assign md_grid_col = 1 %}
  {% endif %}
{% endcomment %}

{% assign info_card_container_width_lowercase = info_card_container_width | downcase %}
{% if info_card_container_width_lowercase == 'lg' %}
  {% assign container_width_class = 'container-lg' %}
{% elsif info_card_container_width_lowercase == 'sm' %}
  {% assign container_width_class = 'container-sm' %}
{% else %}
  {% assign container_width_class = 'container-md' %}
{% endif %}

<div class="{{ container_width_class }} flex flex-col">
  <div class="flex flex-col">
    <h2 class="text-center text-3xl font-bold tracking-tight text-gray-700 sm:text-left sm:text-4xl lg:text-4xl">
      {{ info_card_title }}
    </h2>
    <p class="text=base mt-6 text-gray-500 lg:text-lg">{{ info_card_subtitle }}</p>
  </div>
  <div class="mx-auto mt-16 flex max-w-full snap-x snap-mandatory gap-6 overflow-x-auto p-6 sm:mt-10 sm:grid sm:grid-cols-{{info_card_md_grid_col_num}} lg:mx-0 lg:max-w-none lg:grid-cols-{{info_card_grid_col_num}} lg:gap-8">
    {% for info_card in info_cards %}
      {% include 'partials/info-card.liquid',
        info_card_img: info_card.info_card_img,
        info_card_title: info_card.info_card_title,
        info_card_date_time: info_card.info_card_date_time,
        info_card_paragraph: info_card.info_card_paragraph,
        info_card_btn_txt: info_card.info_card_btn_txt,
        info_card_link_key: info_card.link_key
      %}
    {% endfor %}
  </div>
</div>
