<div class="container-lg pb-0">
  <h1 class="text-4xl font-bold tracking-tight text-gray-700 sm:text-4xl">{{ program_cards_heading }}</h1>
  <p class="mt-3 text-lg leading-8 text-gray-600">
    {{ program_cards_subheading }}
  </p>
  {% comment %}
    <div class="sm:container-lg hidden sm:block">
      <div id="orange-line" class="h-2 w-full bg-teafc-orange p-0"></div>
    </div>
  {% endcomment %}
</div>

<div class="container-md flex flex-col gap-8 md:max-lg:grid md:max-lg:grid-cols-2">
  {% for program_card in program_cards %}
    {% include 'partials/program-card.liquid',
      program_card_img: program_card.program_card_img,
      program_card_title: program_card.program_card_title,
      program_card_paragraph: program_card.program_card_paragraph,
      program_card_hidden_text: program_card.program_card_hidden_text,
      program_card_detail_header1: program_card.program_card_detail_header1,
      program_card_detail1: program_card.program_card_detail1,
      program_card_detail_header2: program_card.program_card_detail_header2,
      program_card_detail2: program_card.program_card_detail2,
      program_card_detail_header3: program_card.program_card_detail_header3,
      program_card_detail3: program_card.program_card_detail3,
      program_card_btn_txt: program_card.program_card_btn_txt,
      program_card_btn_link_key: program_card.program_card_btn_link_key
    %}
  {% endfor %}
</div>
