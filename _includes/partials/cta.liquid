<div class="container-sm">
  <div class="relative rounded-3xl bg-gradient-to-br from-teafc-light-orange from-[0%] via-[#FBECF5] via-[50%] to-teafc-light-blue to-[100%] shadow-lg">
    <div
      class="relative h-80 overflow-hidden rounded-3xl md:absolute md:left-0 md:h-full md:w-1/3 lg:w-1/2"
    >
      <img class="h-full w-full object-cover" src="{{ cta_img }}" alt="{{ cta_img_alt_tag }}">
    </div>
    <div class="relative mx-auto max-w-7xl py-24 sm:py-32 lg:px-8 lg:py-40">
      <div class="pl-6 pr-6 md:ml-auto md:w-2/3 md:pl-16 lg:w-1/2 lg:pl-24 lg:pr-0 xl:pl-32">
        <h2 class="mt-2 text-3xl font-bold tracking-tight text-gray-700 sm:text-4xl">{{ cta_title }}</h2>
        <p class="mt-6 text-base leading-7 text-gray-500">
          {{ cta_subtitle }}
        </p>
        <div class="mt-8">
          <a
            href="{{ navigation | getByKey: cta_btn_link_key }}"
            class="button inline-flex rounded-md bg-white px-3.5 py-2.5 text-sm font-semibold text-gray-500 shadow-sm hover:bg-white focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-white"
          >
            {{ cta_btn_txt }}
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
