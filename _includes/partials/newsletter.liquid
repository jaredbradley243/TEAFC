<!-- _includes/partials/newsletter.liquid -->
<div class="container-sm bg-white">
  <div class="mx-auto flex flex-wrap gap-4 sm:justify-center lg:flex-nowrap lg:justify-between">
    <div class="max-w-xl pb-6 text-center text-3xl font-bold tracking-tight text-gray-900 sm:text-left lg:pb-0 lg:text-4xl">
      <h2 class="inline sm:block lg:inline xl:block">{{ newsletter.title }}</h2>
      <p class="inline sm:block lg:inline xl:block">{{ newsletter.subtitle }}</p>
    </div>
    <form class="w-full max-w-md lg:pt-2">
      <div class="flex gap-x-4">
        <label for="email-address" class="sr-only">Email address</label>
        <input
          id="email-address"
          name="email"
          type="email"
          autocomplete="email"
          required
          class="min-w-0 flex-auto rounded-md border-0 px-3.5 py-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-teafc-orange sm:text-sm sm:leading-6"
          placeholder="Enter your email"
        >
        <button
          type="submit"
          class="flex-none rounded-md bg-teafc-orange px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-teafc-light-orange focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-teafc-orange"
        >
          {{ newsletter.cta }}
        </button>
      </div>
      <p class="mt-4 text-sm leading-6 text-gray-900">
        We care about your data. Read our
        <a href="#" class="font-semibold text-teafc-orange hover:text-teafc-light-orange">privacy&nbsp;policy</a>.
      </p>
    </form>
  </div>
</div>
