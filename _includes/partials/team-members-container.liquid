<div class="container-md">
  <div class="bg-white">
    <div class="space-y-4">
      <div class="flex flex-col gap-4 text-left">
        <div class="flex justify-between">
          <h2 class="text-center text-3xl font-bold tracking-tight text-gray-700 sm:text-left sm:text-4xl lg:text-4xl">
            {{ team_member_heading }}
          </h2>
        </div>
        <p class="mt-3 text-base text-gray-500 lg:text-lg">{{ team_member_subheading }}</p>
      </div>
      <div
        class="h-[4px] w-full bg-teafc-orange"
      ></div>
    </div>

    <div class="bg-white pb-6 pt-12">
      <div class="mx-auto grid max-w-7xl grid-cols-1 gap-x-8 gap-y-20 px-6 lg:px-8 xl:grid-cols-3">
        <ul
          role="list"
          class="mx-auto grid max-w-2xl grid-cols-1 gap-x-6 gap-y-20 sm:grid-cols-3 lg:mx-0 lg:max-w-none lg:gap-x-8 xl:col-span-3"
        >
          {% for team_member in team_members limit: 3 %}
            {% include 'partials/team-member.liquid',
              team_member_img: team_member.team_member_img,
              team_member_name: team_member.team_member_name,
              team_member_position: team_member.team_member_position,
              team_member_description: team_member.team_member_description
            %}
          {% endfor %}
        </ul>
      </div>
    </div>

    <div
      class="accordion-body hidden rounded-b-xl bg-white"
      role="region"
      aria-live="polite"
    >
      <div class="flex flex-col gap-3 rounded-2xl">
        <div class="bg-white py-6">
          <div class="mx-auto grid max-w-7xl grid-cols-1 gap-x-8 gap-y-20 px-6 lg:px-8 xl:grid-cols-3">
            <ul
              role="list"
              class="mx-auto grid max-w-2xl grid-cols-1 gap-x-6 gap-y-20 sm:grid-cols-3 lg:mx-0 lg:max-w-none lg:gap-x-8 xl:col-span-3"
            >
              {% for team_member in team_members offset: 3 %}
                {% include 'partials/team-member.liquid',
                  team_member_img: team_member.team_member_img,
                  team_member_name: team_member.team_member_name,
                  team_member_position: team_member.team_member_position,
                  team_member_description: team_member.team_member_description
                %}
              {% endfor %}
            </ul>
          </div>
        </div>
      </div>
    </div>

    <button
      class="accordion-header w-full space-y-4"
      role="button"
      aria-expanded="false"
    >
      <div class="flex flex-col gap-4 text-left">
        <div class="flex items-center justify-center gap-1">
          <h4 class="text-center text-lg font-semibold tracking-tight text-gray-700">View More</h4>
          <svg
            class="h-8 w-8 flex-none transform text-black"
            viewBox="0 0 20 20"
            fill="currentColor"
            aria-hidden="false"
            role="presentation"
          >
            <path
              fill-rule="evenodd"
              d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z"
              clip-rule="evenodd" />
          </svg>
        </div>
      </div>
    </button>
  </div>
</div>
