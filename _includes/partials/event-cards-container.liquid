<div class="container-lg pb-0">
  <h1 class="text-4xl font-bold tracking-tight text-gray-700 sm:text-4xl">{{ event_cards_heading }}</h1>
  <p class="mt-3 text-lg leading-8 text-gray-600">
    {{ event_cards_subheading }}
  </p>
</div>

<div class="container-lg flex flex-col gap-8">
  {% for event_card in event_cards %}
    {% include 'partials/event-card.liquid',
      event_card_img: event_card.event_card_img,
      event_card_title: event_card.event_card_title,
      event_card_paragraph: event_card.event_card_paragraph,
      event_card_hidden_text: event_card.event_card_hidden_text,
      event_card_detail_header1: event_card.event_card_detail_header1,
      event_card_detail1: event_card.event_card_detail1,
      event_card_detail_header2: event_card.event_card_detail_header2,
      event_card_detail2: event_card.event_card_detail2,
      event_card_detail_header3: event_card.event_card_detail_header3,
      event_card_detail3: event_card.event_card_detail3,
      event_card_btn_txt: event_card.event_card_btn_txt,
      event_card_btn_link_key: event_card.event_card_btn_link_key
    %}
  {% endfor %}
</div>
