<div class="container-sm flex flex-col gap-8">
  <div class="flex flex-col">
    <h2 class="text-center text-3xl font-bold tracking-tight text-gray-700 sm:text-left sm:text-4xl lg:text-4xl">
      {{ calendar.calendar_title }}
    </h2>
    <p class="mt-6 text-base text-gray-500 lg:text-lg">{{ calendar.calendar_subtitle }}</p>
  </div>
  <div class="flex flex-col items-center gap-12 lg:flex-row lg:items-start lg:justify-center">
    <div class="flex w-full max-w-[29rem] flex-1 flex-col gap-x-14 lg:max-w-none">
      <div class="flex justify-between" id="cal-header">
        <button
          id="prevMonth"
          type="button"
          aria-label="Go to previous month"
          aria-controls="calendarGrid eventsFlexBox"
          class="flex items-center justify-center p-1.5 text-gray-400 hover:text-gray-500"
        >
          <span class="sr-only">Previous month</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M12.79 5.23a.75.75 0 01-.02 1.06L8.832 10l3.938 3.71a.75.75 0 11-1.04 1.08l-4.5-4.25a.75.75 0 010-1.08l4.5-4.25a.75.75 0 011.06.02z" clip-rule="evenodd" />
          </svg>
        </button>
        <h2 id="monthName" aria-live="polite" class="text-sm font-semibold text-gray-900"></h2>
        <button
          id="nextMonth"
          type="button"
          aria-label="Go to next month"
          aria-controls="calendarGrid eventsFlexBox"
          class="flex items-center justify-center p-1.5 text-gray-400 hover:text-gray-500"
        >
          <span class="sr-only">Next month</span>
          <svg class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
            <path fill-rule="evenodd" d="M7.21 14.77a.75.75 0 01.02-1.06L11.168 10 7.23 6.29a.75.75 0 111.04-1.08l4.5 4.25a.75.75 0 010 1.08l-4.5 4.25a.75.75 0 01-1.06-.02z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
      <section class="text-center">
        <div class="mt-6 grid grid-cols-7 text-xs leading-6 text-gray-500">
          <div>M</div>
          <div>T</div>
          <div>W</div>
          <div>T</div>
          <div>F</div>
          <div>S</div>
          <div>S</div>
        </div>
        <div
          id="calendarGrid"
          role="grid"
          class="mt-2 grid grid-cols-7 gap-px bg-gray-200 text-sm shadow ring-1 ring-gray-200"
        ></div>
      </section>
    </div>

    <section class="min-w-50% flex-1 sm:min-w-0">
      <h2 class="text-base font-semibold leading-6 text-gray-900">{{ calendar.calendar_events_title }}</h2>
      <ol class="" id="eventsFlexBox" aria-live="polite" role="list"></ol>
    </section>
  </div>
</div>
