<!-- /_includes/partials/hero.liquid -->

{% comment %} Hide CTA button logic {% endcomment %}
{% assign display_btn_lower = display_btn | downcase %}
{% if display_btn_lower == "false" %}
  {% assign display_btn_class = "hidden" %}
{% else %}
  {% assign display_btn_class = "" %}{% endif %}

{% comment %} Swap col logic {% endcomment %}
{% assign swap_col_lower = swap_col | downcase %}
{% if swap_col_lower == "true" %}
  {% assign swap_col_class = "order-1" %}
{% else %}
  {% assign swap_col_class = "" %}
{% endif %}

<!-- HERO LEFT -->
<div class="mx-auto max-w-7xl pb-10 lg:pb-20 pt-10 sm:pb-10 lg:grid lg:grid-cols-2 lg:gap-x-8 lg:px-8">
  <div class="px-6 lg:px-0 lg:pt-4 {{ swap_col_class }}">
    <div class="mx-auto max-w-2xl">
      <div class="max-w-lg">
        <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">{{ hero_heading }}</h1>
        <p class="mt-3 text-lg leading-8 text-gray-600">{{ hero_subheading }}</p>
        <div class="mt-5 flex items-center gap-x-6">
          <a href="{{ navigation.about_us_url }}" class="{{ display_btn_class }} rounded-md bg-teafc-blue px-3.5 py-2.5 text-sm font-semibold text-white shadow-sm hover:bg-teafc-blue focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600">{{ hero_btn }}</a>
        </div>
      </div>
    </div>
  </div>
  <!-- HERO RIGHT -->
  <div class="mt-10 sm:mt-24 md:mx-auto md:max-w-4xl lg:mx-0 lg:mt-0">
    <div class="px-6 lg:px-0 lg:pt-4">
      <img
        src="{{ hero_img }}"
        alt=""
        class="rounded-2xl lg:rounded-r-none lg:rounded-l-2xl">
    </div>
  </div>
</div></div>