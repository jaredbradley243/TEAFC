{% comment %} Bottom padding logic {% endcomment %}
{% assign footer_top_padding_lower = footer_top_padding | downcase %}
{% if footer_top_padding_lower == 'false' %}
  {% assign footer_top_padding_class = 'pt-0' %}
{% endif %}

<footer class="" aria-labelledby="footer-heading">
