<div class="container-lg px-0">
  <div class="flex flex-col gap-10 bg-teafc-blue px-8">
    <div class="mt-8 flex flex-col gap-2 md:mt-4 lg:mt-8">
      <h1 class="text-center text-3xl font-bold text-white sm:text-left lg:text-4xl">
        {{ current-events.current_event_header | upcase }}
      </h1>
      <p class="text-base font-light text-white lg:text-lg">
        {{ current-events.current_event_text -}}
        {{- current-events.current_event_text }}
      </p>
    </div>

    <div class="mx-6 mb-10 flex flex-col gap-6 md:mx-0 md:flex-row md:gap-6 lg:gap-8">
      <div class="basis-5/12">
        <img
          class="h-full w-full rounded-xl object-cover lg:rounded-2xl"
          src="{{ current-events.event_1_img }}"
          alt=""
          {% imageDimensions current-events.event_1_img %}
        >
      </div>
      <div class="flex basis-7/12 flex-col gap-4">
        <h2 class="pb text-2xl font-semibold text-white lg:text-3xl">{{ current-events.event_1_title }}</h2>
        <p class="font-light text-white">{{ current-events.event_1_text }}</p>
      </div>
    </div>
  </div>
</div>
