<!-- /_includes/partials/hero.liquid -->
<div class="container-md lg:grid lg:grid-cols-2 lg:gap-x-8">
  <!-- HERO LEFT -->
  <div class="ml-auto mr-auto mt-10 w-72 sm:mt-24 sm:w-auto md:mx-auto md:max-w-4xl lg:mx-0 lg:mt-0">
    <div class="lg:pt-4">
      <img
        src="{{ img }}"
        alt=""
        class="mx-auto rounded-2xl"
      >
    </div>
  </div>
  <!-- HERO RIGHT -->
  <div class="flex flex-col justify-center lg:pt-4">
    <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-4xl">{{ heading }}</h1>
    <div class="flex flex-col overflow-hidden">
      <p class="mt-3 text-base leading-8 text-gray-600">
        {{ paragraph }}
      </p>
      <p
        id="founders-hidden-text"
        class="mt-3 hidden max-h-0 text-base leading-8 text-gray-600"
        role="text"
        aria-labelledby="founders-read-more-button"
      >
        {{ hidden_text }}
      </p>
    </div>
    <button
      id="founders-read-more-button"
      role="button"
      aria-controls="founders-hidden-text"
      aria-expanded="false"
      name="founders-read-more-button"
      class="mt-4 flex items-center justify-center gap-1 font-semibold text-gray-700"
    >
      Read More
      <svg class="h-5 w-5 flex-none transform text-gray-400" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
        <path fill-rule="evenodd" d="M5.23 7.21a.75.75 0 011.06.02L10 11.168l3.71-3.938a.75.75 0 111.08 1.04l-4.25 4.5a.75.75 0 01-1.08 0l-4.25-4.5a.75.75 0 01.02-1.06z" clip-rule="evenodd"></path>
      </svg>
    </button>
    <img
      class="py-5"
      src="/assets/img/signatures.svg"
      alt="Matt and Navah Asner signature"
    >
  </div>
</div>
